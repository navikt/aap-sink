<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="pretty" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%cyan(%d{HH:mm:ss.SSS}) %gray([%thread]) %highlight(%-5level) %magenta(%logger{36}) - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="kafka" level="WARN" additivity="false"/>
    <logger name="io.confluent.kafka.serializers" level="WARN" additivity="false"/>
    <logger name="org.apache.zookeeper" level="WARN" additivity="false"/>
    <logger name="org.apache.kafka" level="WARN" additivity="false"/>
    <logger name="org.testcontainers.utility.RyukResourceReaper" level="WARN" additivity="false"/>

    <logger name="secureLog" level="TRACE" additivity="false">
        <appender-ref ref="pretty"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="pretty"/>
    </root>

</configuration>
